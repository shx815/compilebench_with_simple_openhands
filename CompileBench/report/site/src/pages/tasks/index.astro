---
import Base from '@/layouts/Base.astro';
import RankingTable from '@/components/RankingTable.astro';
import type { TaskMetrics, Stats } from '@/types';
import taskMetricsData from '@/data/task_metrics.json';
import statsData from '@/data/stats.json';

const taskMetrics: TaskMetrics[] = taskMetricsData;
const stats: Stats = statsData;
const tasks_summary = taskMetrics;
---
<Base title="Tasks Â· CompileBench" description={`All benchmark tasks with pass@1 and pass@3 across models.`}>
  <div class="max-w-5xl mx-auto px-6 py-8">
      <RankingTable
      data={tasks_summary}
      numTries={stats.num_tries}
      type="task"
      containerId="tasks-page-table"
      showDescriptionsBelowName={true}
    />
  </div>
</Base>